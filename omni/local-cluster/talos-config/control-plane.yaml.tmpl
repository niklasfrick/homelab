machine:
  certSANs:
    - ${cluster_domain}
    - ${hostname}
    - ${cluster_endpoint_vip}
    - ${ip_address}
  network:
    hostname: ${hostname}
    interfaces:
      - interface: eth0
        dhcp: false
        addresses:
          - ${ip_address}/24
        routes:
          - network: 0.0.0.0/0
            gateway: ${gateway_ip}
        vip:
          ip: ${cluster_endpoint_vip}
    extraHostEntries:
      - ip: 127.0.0.1
        aliases:
          - ${cluster_domain}

cluster:
  controllerManager:
    extraArgs:
      bind-address: 0.0.0.0
  scheduler:
    extraArgs:
      bind-address: 0.0.0.0
  etcd:
    extraArgs:
      listen-metrics-urls: http://0.0.0.0:2381
